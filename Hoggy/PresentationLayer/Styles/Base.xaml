<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PresentationLayer.Styles">

    <FontFamily x:Key="MainFont">Verdana</FontFamily>
    <FontFamily x:Key="Header">pack://application:,,,/Resources/#KabelCTT Book Bold</FontFamily>

    <SolidColorBrush x:Key="FirstBrushLight" Color="#FFFFDD6A"/>
    <SolidColorBrush x:Key="FirstBrushLighter" Color="#FFFFFAEB"/>
    <SolidColorBrush x:Key="FirstBrushMiddle" Color="#FFFFC500"/>
    <SolidColorBrush x:Key="FirstBrushDark" Color="#FF5D4800"/>
    <SolidColorBrush x:Key="SecondBrushLighter" Color="#FFE2FFF5"/>
    <SolidColorBrush x:Key="SecondBrushMiddle" Color="#2DBCB8"/>
    <SolidColorBrush x:Key="SecondBrushDark" Color="Teal"/>
    <SolidColorBrush x:Key="SecondBrushDarkest" Color="#FF004949"/>
    <SolidColorBrush x:Key="IconColor" Color="#FFE63B3B"/>
    <SolidColorBrush x:Key="IconHoverColor" Color="#FF951C1C"/>
    <SolidColorBrush x:Key="WindColor" Color="#2DBCB8"/>
    
    <Style x:Key="Lable" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Header}"/>
        <Setter Property="FontSize" Value="15pt"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="FontSize" Value="16pt"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
    <Style TargetType="PasswordBox">
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="FontSize" Value="16pt"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10"/>
    </Style>
    <Style x:Key="Btn"  TargetType="Button" BasedOn="{StaticResource MetroButton}">
        <Setter Property="FontFamily" Value="{StaticResource Header}"/>
        <Setter Property="FontSize" Value="16pt"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    


</ResourceDictionary>